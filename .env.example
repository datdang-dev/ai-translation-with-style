# Environment variables for AI Translation Framework
# Copy this file to .env and set your actual values

# Application settings
APP_ENVIRONMENT=development
APP_DEBUG=true
APP_CONFIG_DIR=config

# Logging settings
LOG_LEVEL=DEBUG
LOG_ENABLE_FILE_LOGGING=false
LOG_SENTRY_DSN=

# Translation settings
TRANSLATION_DEFAULT_TARGET_LANGUAGE=vi
TRANSLATION_MAX_CONCURRENT_REQUESTS=10
TRANSLATION_ENABLE_RATE_LIMITING=false

# Database settings (optional)
DB_ENABLE_DATABASE=false
DB_DATABASE_URL=

# Observability settings
OBSERVABILITY_ENABLE_METRICS=false
OBSERVABILITY_ENABLE_TRACING=false
OBSERVABILITY_TRACING_ENDPOINT=

# API Keys (add your actual keys here)
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Multiple API keys for load balancing (optional)
OPENROUTER_API_KEY_1=your-first-openrouter-key
OPENROUTER_API_KEY_2=your-second-openrouter-key
OPENROUTER_API_KEY_3=your-third-openrouter-key

# Sentry error tracking (production)
SENTRY_DSN=your-sentry-dsn-here

# Tracing endpoint (production)
JAEGER_ENDPOINT=http://localhost:14268/api/traces